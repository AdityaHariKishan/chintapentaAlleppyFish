<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/uploadNewProfilePic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:src="@drawable/ic_file_upload_black_24dp"
                    android:visibility="gone" />

                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/profilePicFMIV"
                    android:layout_width="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_height="250dp"
                    android:src="@drawable/allepy_fish_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@+id/uploadNewProfilePic"
                    android:layout_toStartOf="@+id/uploadNewProfilePic" />


            </RelativeLayout>

            <include layout="@layout/card_layout" />

            <include layout="@layout/card_layout1" />

            <include layout="@layout/card_layout2" />

            <!--  <include layout="@layout/card_layout" />

              <include layout="@layout/card_layout1" />

              <include layout="@layout/card_layout2" />-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>