<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_single_item_view_obassign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ss.android.allepyfish.activities.ManagerResponseListDetails">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/uploadedFishImagesFMResponse"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/alleppeyfish" />

            <include layout="@layout/card_layout_fish_name_fmresponse" />

            <include layout="@layout/card_layout_fish_local_name_fmresponse" />

            <include layout="@layout/card_layout_delivery_date_fmresponse" />

            <include layout="@layout/card_layout_delivery_date_fm_fmresponse" />


            <!--<include layout="@layout/card_layout_creator_name_fmresponse" />-->

            <include layout="@layout/card_layout_order_require_state_fmresponse" />

            <include layout="@layout/card_layout_order_district_fmresponse" />

            <include layout="@layout/card_layout_order_city_fmresponse" />

            <include layout="@layout/card_layout_order_contact_no_fmresponse" />

            <include layout="@layout/card_layout_order_quantity_supplying_fmresponse" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/rejectFMResponse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:text="Reject" />


                <Button
                    android:id="@+id/acceptFMResponse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:text="Accept" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>


